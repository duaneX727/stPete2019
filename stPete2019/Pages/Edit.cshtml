@page "{Id:int}"
@model stPete2019.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Member - @Model.Member.Id</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="Member.Id" type="hidden" />
    <div>
        <label asp-for="Member.Name"></label>
        <div>
            <input asp-for="Member.Name" />
            <span asp-validation-for="Member.Name"></span>
        </div>
    </div>
    <div>
        <button type="submit">Save</button>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_validationScriptsPartial");}
}
